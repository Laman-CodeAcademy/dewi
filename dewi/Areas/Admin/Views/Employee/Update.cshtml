@model EmployeeUpdateVM
<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" placeholder="Enter name">
        <span asp-validation-for="Name" class="text text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control" placeholder="Enter name">
        <span asp-validation-for="Description" class="text text-danger"></span>
    </div>
    <div class="form-group">
        <select asp-for="PositionId" asp-items="ViewBag.Positions" class="form-control"></select>
        <span asp-validation-for="PositionId" class="text text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Image"></label>
        <input class="form-control" asp-for="Image" placeholder="Enter Image">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>